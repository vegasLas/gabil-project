<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="PoligonMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:PoligonMaui.Views"
    Title="PoligonMaui">

    <TabBar>
        <ShellContent
            Title="Map"
            ContentTemplate="{DataTemplate local:MapPage}"
            Route="MapPage" />
        
        <ShellContent
            Title="Control Panel"
            ContentTemplate="{DataTemplate local:ControlPanelPage}"
            Route="ControlPanelPage" />
    </TabBar>

</Shell>